import java.util.*;
public class Main
{
	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		int  n=sc.nextInt();
		int m=sc.nextInt();
		int sumn=0;
		int sumd=0;
		
		for(int i=1;i<=m;i++)
		{
		    if(i%n==0)
		    {
		        sumd+=i;
		    }
		    else
		    {
		        sumn+=i;
		    }
		}
		if(sumd>sumn)
		{
		    System.out.println(sumd-sumn);
		}
		else
		{
		    System.out.println(sumn-sumd);
		}
	 }
}
